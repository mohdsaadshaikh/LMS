generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  password String
  name     String
  role     Role   @default(LIBRARIAN)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Member {
  id            String  @id @default(cuid())
  name          String
  fatherName    String
  cnic          String  @unique
  phone         String
  address       String?
  qualification String?
  regNo         String  @unique

  cardIssuedAt  DateTime   @default(now())
  cardExpiresAt DateTime
  cardStatus    CardStatus @default(ACTIVE)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([cnic])
  @@index([regNo])
}

enum Role {
  ADMIN
  LIBRARIAN
}

enum CardStatus {
  ACTIVE
  EXPIRED
  BLOCKED
}
